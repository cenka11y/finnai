# Environment Variables Template for SOUAI Application
# Copy this file to .env and fill in the actual values

# Database Configuration
DATABASE_URL=postgresql://souai_user:souai_password@localhost:5432/souai_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# NextAuth Configuration (Frontend)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-min-32-chars

# API Configuration
API_BASE_URL=http://localhost:5000
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email Configuration
EMAIL_FROM=noreply@souai.fi
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=false
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password

# AWS S3 Configuration
AWS_REGION=eu-north-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_NAME=souai-files-dev
S3_ENDPOINT=https://s3.eu-north-1.amazonaws.com

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Content Ingestion
CONTENT_INGESTION_INTERVAL=86400000  # 24 hours in milliseconds
CONTENT_SOURCES_INFOFINLAND=https://www.infofinland.fi
CONTENT_SOURCES_KOTOUTUMINEN=https://kotoutuminen.fi

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_REGISTER_MAX=3

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,docx,jpg,jpeg,png,webp

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=604800000  # 7 days in milliseconds

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12
PASSWORD_RESET_EXPIRES=3600000  # 1 hour in milliseconds
EMAIL_VERIFICATION_EXPIRES=86400000  # 24 hours in milliseconds

# External Services
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# Development/Testing
NODE_ENV=development
PORT=5000
FRONTEND_PORT=3000

# Database Seeds
SEED_ADMIN_EMAIL=admin@souai.fi
SEED_ADMIN_PASSWORD=Admin123!
SEED_DATA_ENABLED=true

# Content Scraping
SCRAPING_USER_AGENT=SOUAI-Bot/1.0 (+https://souai.fi/robots)
SCRAPING_DELAY_MS=1000
SCRAPING_RESPECT_ROBOTS=true

# Localization
DEFAULT_LANGUAGE=fi
SUPPORTED_LANGUAGES=fi,en,tr,ar,ru,so

# CV Generation
CV_TEMPLATE_STORAGE=s3
CV_GENERATION_TIMEOUT=30000  # 30 seconds

# Speech Services
SPEECH_TO_TEXT_PROVIDER=openai
TEXT_TO_SPEECH_PROVIDER=openai
SPEECH_RECOGNITION_LANGUAGE=fi-FI

# Backup and Maintenance
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Feature Flags
FEATURE_SPEECH_RECOGNITION=true
FEATURE_AI_TUTOR=true
FEATURE_CV_BUILDER=true
FEATURE_SERVICES_DIRECTORY=true
FEATURE_JOB_READINESS=true
FEATURE_PARTNER_PORTAL=false
